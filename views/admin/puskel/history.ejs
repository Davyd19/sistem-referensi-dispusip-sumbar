<%- include('../partials/header') %>

<div class="flex flex-col gap-6">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            <i class="fas fa-history text-purple-600"></i> <%= title %>
        </h2>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-center w-10">No</th>
                        <th scope="col" class="px-6 py-3">Nama Pos</th>
                        <th scope="col" class="px-6 py-3 text-center">Jumlah Buku</th>
                        <th scope="col" class="px-6 py-3 text-center">Tgl Pinjam</th>
                        <th scope="col" class="px-6 py-3 text-center">Tgl Kembali</th>
                        <th scope="col" class="px-6 py-3 text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof historyData !== 'undefined' && historyData.length > 0) { %>
                        <% historyData.forEach((item, i) => { %>
                        <tr class="bg-white border-b hover:bg-gray-50">
                            <td class="px-6 py-4 text-center font-medium text-gray-500">
                                <%= i + 1 %>
                            </td>

                            <td class="px-6 py-4">
                                <div class="font-bold text-gray-800 text-base"><%= item.name %></div>
                                <div class="text-xs text-gray-500 flex items-center gap-1 mt-1">
                                    <i class="fas fa-map-marker-alt text-red-400"></i> <%= item.address %>
                                </div>
                                <div class="text-xs text-gray-400 mt-0.5">
                                    PJ: <%= item.contact %> (<%= item.phone %>)
                                </div>
                            </td>
                            
                            <td class="px-6 py-4 text-center">
                                <span class="bg-blue-100 text-blue-800 text-sm font-bold px-3 py-1 rounded-full">
                                    <%= item.total_books %> Eks
                                </span>
                            </td>

                            <td class="px-6 py-4 text-center text-gray-600">
                                <%= item.loan_date ? new Date(item.loan_date).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) : '-' %>
                            </td>

                            <td class="px-6 py-4 text-center font-medium text-purple-700">
                                <%= item.return_date ? new Date(item.return_date).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) : '-' %>
                            </td>

                            <td class="px-6 py-4 text-center">
                                <span class="bg-purple-100 text-purple-800 text-xs font-bold px-2 py-1 rounded-full border border-purple-200">
                                    Selesai
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-12 text-gray-400">
                                <div class="flex flex-col items-center justify-center gap-3">
                                    <i class="fas fa-clipboard-check text-4xl text-gray-300"></i>
                                    <span>Belum ada riwayat pengembalian (Lembaga yang sudah selesai pinjam).</span>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>