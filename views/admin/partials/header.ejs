<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Menggunakan title jika ada, atau default -->
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex">

    <% 
        // Helper untuk mencegah error jika variabel 'active' tidak dikirim dari controller
        // Kita gunakan 'active' jika ada, atau fallback mengecek 'title'
        const safeActive = typeof active !== 'undefined' ? active : '';
        const safeTitle = typeof title !== 'undefined' ? title : '';
    %>

    <header class="fixed top-0 left-0 right-0 h-16 bg-white shadow z-40 flex items-center px-4">
        <button id="toggleSidebar"
            class="bg-blue-600 text-white p-2 rounded-md hover:bg-blue-700">
            â˜°
        </button>

        <h1 class="ml-4 text-xl font-semibold">
            <%= safeTitle %>
        </h1>
    </header>

    <!-- Sidebar -->
    <aside id="sidebar"
        class="w-64 bg-white h-screen shadow-lg fixed flex flex-col justify-between
                transform transition-transform duration-300 ease-in-out">
        <div>
            <div class="p-6 border-b">
                <h1 class="text-lg font-bold text-blue-600">Admin Panel</h1>
            </div>

            <nav class="mt-4">
                <a href="/admin/books" class="block px-6 py-3 hover:bg-blue-50 <%= safeActive === 'home' || safeTitle === 'Daftar Buku' ? 'bg-blue-100 font-semibold' : '' %>">
                    ğŸ“š Daftar Buku
                </a>

                <a href="/admin/books/add" class="block px-6 py-3 hover:bg-blue-50 <%= safeActive === 'add' ? 'bg-blue-100 font-semibold' : '' %>">
                    â• Tambah Buku
                </a>

                <a href="/admin/categories"
                    class="block px-6 py-3 hover:bg-blue-50 
                    <%= safeActive === 'categories' || safeTitle === 'Kelola Kategori' ? 'bg-blue-100 font-semibold' : '' %>">
                    ğŸ“‚ Daftar Kategori
                </a>

                <a href="/admin/subjects"
                    class="block px-6 py-3 hover:bg-blue-50 <%= safeActive === 'subject' || safeTitle === 'Kelola Subjek' ? 'bg-blue-100 font-semibold' : '' %>">
                    ğŸ·ï¸ Subjek
                </a>

                <!-- MENU BARU: Penulis -->
                <a href="/admin/authors"
                    class="block px-6 py-3 hover:bg-blue-50 <%= safeActive === 'authors' || safeTitle === 'Kelola Penulis' ? 'bg-blue-100 font-semibold' : '' %>">
                    âœï¸ Penulis
                </a>

                <!-- MENU BARU: Penerbit -->
                <a href="/admin/publishers"
                    class="block px-6 py-3 hover:bg-blue-50 <%= safeActive === 'publishers' || safeTitle === 'Kelola Penerbit' ? 'bg-blue-100 font-semibold' : '' %>">
                    ğŸ¢ Penerbit
                </a>

            </nav>
        </div>

        <!-- Logout Button di bawah -->
        <div class="mb-6 px-6">
            <a href="/admin/logout"
            class="w-full block py-2 bg-red-500 text-white font-semibold rounded-lg shadow-md hover:bg-red-600 transition duration-200 text-center">
                Logout
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main id="mainContent"
        class="ml-64 w-full p-8 transition-all duration-300">