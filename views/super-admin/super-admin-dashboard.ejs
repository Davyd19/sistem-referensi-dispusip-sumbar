<%- include('partials/header') %> 

<div class="p-6">
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Dashboard Super Admin</h1>
            <p class="text-gray-500 mt-1">Selamat datang kembali, <span class="font-semibold text-blue-600"><%= user %></span>!</p>
        </div>
        <div class="flex gap-3">
            <span class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg text-sm font-medium flex items-center gap-2">
                <i class="fas fa-calendar-alt"></i> <%= new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
            </span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition-shadow">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase tracking-wider mb-1">Total Koleksi Buku</p>
                <h2 class="text-4xl font-extrabold text-gray-800"><%= stats.totalBooks %></h2>
                <p class="text-xs text-gray-400 mt-2">
                    Total akumulasi seluruh ruangan
                </p>
            </div>
            <div class="w-16 h-16 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-3xl">
                <i class="fas fa-book"></i>
            </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition-shadow">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase tracking-wider mb-1">Total Ruangan OPAC</p>
                <h2 class="text-4xl font-extrabold text-gray-800"><%= stats.totalRuangan %></h2>
                <a href="/admin/rooms" class="text-sm text-purple-600 hover:text-purple-700 font-medium mt-2 inline-block">
                    Kelola Ruangan <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="w-16 h-16 bg-purple-50 text-purple-600 rounded-2xl flex items-center justify-center text-3xl">
                <i class="fas fa-door-open"></i>
            </div>
        </div>
    </div>

    <div>
        <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
            <i class="fas fa-list-ul text-orange-500 mr-3"></i> Rincian Koleksi Per Ruangan
        </h3>

        <% if (stats.roomsData.length === 0) { %>
            <div class="bg-white p-8 rounded-xl shadow-sm text-center border border-gray-100">
                <div class="text-gray-300 text-5xl mb-4"><i class="fas fa-folder-open"></i></div>
                <p class="text-gray-500">Belum ada data ruangan.</p>
                <a href="/admin/rooms/add" class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg font-bold hover:bg-blue-700 transition">
                    <i class="fas fa-plus mr-1"></i> Tambah Ruangan
                </a>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% stats.roomsData.forEach(room => { %>
                    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-200 hover:border-blue-400 transition-all group relative overflow-hidden">
                        <div class="absolute top-0 right-0 -mt-2 -mr-2 w-16 h-16 bg-gradient-to-br from-gray-50 to-gray-100 rounded-full z-0"></div>

                        <div class="relative z-10">
                            <div class="flex items-center gap-3 mb-4">
                                <div class="w-10 h-10 rounded-lg bg-orange-50 text-orange-600 flex items-center justify-center font-bold">
                                    <i class="fas fa-building"></i>
                                </div>
                                <h4 class="font-bold text-lg text-gray-800 truncate" title="<%= room.nama_ruangan %>">
                                    <%= room.nama_ruangan %>
                                </h4>
                            </div>
                            
                            <div class="flex items-end justify-between border-t border-gray-100 pt-4">
                                <div>
                                    <p class="text-xs text-gray-500 uppercase font-semibold">Jumlah Koleksi</p>
                                    <p class="text-2xl font-bold text-blue-700">
                                        <%= room.getDataValue('total_koleksi') %> <span class="text-sm font-normal text-gray-500">Buku</span>
                                    </p>
                                </div>
                                <a href="/admin/rooms/edit/<%= room.id_ruangan %>" class="text-gray-400 hover:text-orange-500 transition" title="Edit Ruangan">
                                    <i class="fas fa-cog"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

</div>