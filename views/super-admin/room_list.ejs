<%- include('partials/header') %>
<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">üè¢ Kelola Ruangan OPAC</h1>
        <a href="/admin/rooms/add" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg font-bold shadow transition flex items-center gap-2">
            <i class="fas fa-plus"></i> Tambah Ruangan
        </a>
    </div>

    <div id="success-alert" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 pr-10 rounded relative mb-4 hidden">
        <strong class="font-bold">Sukses!</strong> <span id="success-message">Data berhasil diproses.</span>
        <button type="button" onclick="var a=this.closest('#success-alert');if(a){a.classList.add('hidden');sessionStorage.removeItem('room_success');}" class="absolute top-2 right-2 text-green-600 hover:text-green-800 text-xl leading-none" aria-label="Tutup">&times;</button>
    </div>
    <% if (typeof query !== 'undefined' && query.error_delete) { %>
    <div id="error-delete-alert" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 pr-10 rounded relative mb-4">
        <strong class="font-bold">Gagal!</strong> <span><%= query.error_delete %></span>
        <button type="button" onclick="var a=document.getElementById('error-delete-alert');if(a){a.remove();}" class="absolute top-2 right-2 text-red-600 hover:text-red-800 text-xl leading-none" aria-label="Tutup">&times;</button>
    </div>
    <% } %>

    <div class="bg-white rounded-xl shadow border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">No</th>
                    <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Nama Ruangan</th>
                    <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Admin Penanggung Jawab</th>
                    <th class="px-6 py-3 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">Aksi</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (rooms.length === 0) { %>
                    <tr><td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">Belum ada data ruangan.</td></tr>
                <% } else { %>
                    <% rooms.forEach((room, index) => { %>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= index + 1 %></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-bold text-gray-900"><%= room.nama_ruangan %></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center text-green-600 mr-3">
                                        <i class="fas fa-user-shield"></i>
                                    </div>
                                    <span class="text-sm font-medium text-gray-700"><%= room.admin ? room.admin.username : 'Tidak Ada' %></span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                <a href="/admin/rooms/edit/<%= room.id_ruangan %>" class="text-indigo-600 hover:text-indigo-900 mx-2" title="Edit">
                                    <i class="fas fa-edit text-lg"></i>
                                </a>
                                <button type="button" class="text-red-600 hover:text-red-900 mx-2 inline btn-delete-room" title="Hapus" data-room-id="<%= room.id_ruangan %>" data-room-name="<%= (room.nama_ruangan || '').replace(/"/g, '&quot;') %>" data-book-count="<%= room._bookCount || 0 %>">
                                    <i class="fas fa-trash text-lg"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Hapus Ruangan -->
<div id="delete-room-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full overflow-hidden">
        <div class="bg-red-600 px-6 py-4">
            <h3 class="text-lg font-bold text-white flex items-center gap-2">
                <i class="fas fa-exclamation-triangle"></i> Hapus Ruangan
            </h3>
        </div>
        <form id="delete-room-form" method="POST" action="">
            <div class="p-6 space-y-4">
                <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                    <p class="text-sm text-amber-800 font-medium">
                        <strong id="delete-room-name"></strong> akan dihapus beserta:
                    </p>
                    <ul class="mt-2 text-sm text-amber-700 list-disc list-inside space-y-1">
                        <li>Semua data buku yang ada di ruangan ini</li>
                        <li>Akun admin ruangan terkait</li>
                    </ul>
                    <p class="mt-3 text-sm font-bold text-amber-900" id="delete-book-count-msg"></p>
                </div>
                <p class="text-sm text-gray-600">Masukkan <strong>username</strong> dan <strong>password</strong> Super Admin untuk konfirmasi:</p>
                <div>
                    <label class="block text-xs font-bold text-gray-600 mb-1">Username Super Admin</label>
                    <input type="text" name="confirm_username" id="delete-confirm-username" required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none"
                        placeholder="Username Super Admin">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-600 mb-1">Password Super Admin</label>
                    <input type="password" name="confirm_password" id="delete-confirm-password" required
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none"
                        placeholder="Password">
                </div>
            </div>
            <div class="bg-gray-50 px-6 py-4 flex justify-end gap-3">
                <button type="button" onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition">
                    Batal
                </button>
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition flex items-center gap-2">
                    <i class="fas fa-trash"></i> Hapus Ruangan
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function openDeleteModal(roomId, roomName, bookCount) {
    const modal = document.getElementById('delete-room-modal');
    const form = document.getElementById('delete-room-form');
    const nameEl = document.getElementById('delete-room-name');
    const countEl = document.getElementById('delete-book-count-msg');
    if (modal && form) {
        form.action = '/admin/rooms/delete/' + roomId;
        if (nameEl) nameEl.textContent = roomName || 'Ruangan ini';
        if (countEl) countEl.textContent = bookCount > 0 
            ? ('Akan dihapus ' + bookCount + ' buku dari ruangan ini.') 
            : 'Tidak ada buku di ruangan ini.';
        document.getElementById('delete-confirm-username').value = '';
        document.getElementById('delete-confirm-password').value = '';
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }
}
function closeDeleteModal() {
    const modal = document.getElementById('delete-room-modal');
    if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }
}
document.getElementById('delete-room-modal')?.addEventListener('click', function(e) {
    if (e.target === this) closeDeleteModal();
});

document.addEventListener('DOMContentLoaded', function() {
    if (window.location.search.includes('error_delete=')) {
        var u = new URL(window.location.href);
        u.searchParams.delete('error_delete');
        window.history.replaceState({}, document.title, u.pathname + (u.search || ''));
    }
    document.querySelectorAll('.btn-delete-room').forEach(function(btn) {
        btn.addEventListener('click', function() {
            var id = this.getAttribute('data-room-id');
            var name = this.getAttribute('data-room-name') || 'Ruangan ini';
            var count = parseInt(this.getAttribute('data-book-count'), 10) || 0;
            openDeleteModal(id, name, count);
        });
    });
    const alertEl = document.getElementById('success-alert');
    const msgEl = document.getElementById('success-message');
    if (!alertEl || !msgEl) return;
    const urlParams = new URLSearchParams(window.location.search);
    const successParam = urlParams.get('success');
    const fromStorage = sessionStorage.getItem('room_success');
    if (successParam || fromStorage) {
        if (successParam === 'created') {
            msgEl.textContent = 'Ruangan baru berhasil ditambahkan.';
        } else if (successParam === 'updated') {
            msgEl.textContent = 'Data ruangan berhasil diperbarui.';
        } else if (successParam === 'deleted') {
            msgEl.textContent = 'Ruangan berhasil dihapus.';
        } else if (fromStorage) {
            try {
                const s = JSON.parse(fromStorage);
                msgEl.textContent = s.message || 'Data berhasil diproses.';
            } catch (e) {
                msgEl.textContent = 'Data berhasil diproses.';
            }
        }
        alertEl.classList.remove('hidden');
        if (successParam) {
            sessionStorage.setItem('room_success', JSON.stringify({ message: msgEl.textContent }));
            window.history.replaceState({}, document.title, window.location.pathname);
        } else {
            sessionStorage.removeItem('room_success');
        }
        // Auto-hilang setelah 2.5 detik (tanpa perlu klik X)
        setTimeout(function() {
            if (alertEl && !alertEl.classList.contains('hidden')) {
                alertEl.style.transition = 'opacity 0.4s ease';
                alertEl.style.opacity = '0';
                setTimeout(function() { 
                    if (alertEl) { alertEl.classList.add('hidden'); alertEl.style.opacity = ''; }
                    sessionStorage.removeItem('room_success');
                }, 400);
            }
        }, 2500);
    }
    var errAlert = document.getElementById('error-delete-alert');
    if (errAlert) {
        setTimeout(function() {
            errAlert.style.transition = 'opacity 0.4s ease';
            errAlert.style.opacity = '0';
            setTimeout(function() { errAlert.remove(); }, 400);
        }, 3500);
    }
}); // end DOMContentLoaded
</script>